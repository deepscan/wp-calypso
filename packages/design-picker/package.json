		"redux": "^5.0.1",
		"typescript": "^5.8.3",
		"webpack": "^5.99.8"
	},
	"peerDependencies": {
		"@wordpress/data": "^10.23.0",
		"@wordpress/element": "^6.23.0",
		"@wordpress/i18n": "^5.23.0",
		"debug": "^4.4.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"redux": "^5.0.1"
	},
	"private": true
}

{
	"name": "@automattic/odie-client",
	"version": "1.0.0",
	"description": "Odie client to chat with bots.",
	"homepage": "https://github.com/Automattic/wp-calypso",
	"license": "GPL-2.0-or-later",
	"author": "Automattic Inc.",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"calypso:src": "src/index.tsx",
	"exports": {
		".": {
			"calypso:src": "./src/index.tsx",
			"types": "./dist/types/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		},
		"./src/*": {
			"calypso:src": "./src/*"
		}
	},
	"sideEffects": [
		"*.css",
		"*.scss"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Automattic/wp-calypso.git",
		"directory": "packages/odie-client"
	},
	"publishConfig": {
		"access": "public"
	},
	"bugs": "https://github.com/Automattic/wp-calypso/issues",
	"types": "dist/types",
	"scripts": {
		"clean": "tsc --build ./tsconfig.json ./tsconfig-cjs.json --clean && rm -rf dist",
		"build": "tsc --build ./tsconfig.json ./tsconfig-cjs.json && copy-assets",
		"prepack": "yarn run clean && yarn run build",
		"test": "yarn jest",
		"watch": "tsc --build ./tsconfig.json --watch"
	},
	"dependencies": {
		"@automattic/agenttic-ui": "^0.1.13",
		"@automattic/components": "workspace:^",
		"@automattic/i18n-utils": "workspace:^",
		"@automattic/zendesk-client": "workspace:^",
		"@tanstack/react-query": "^5.83.0",
		"@wordpress/api-fetch": "7.23.0",
		"@wordpress/data": "^10.23.0",
		"@wordpress/element": "^6.23.0",
		"@wordpress/i18n": "^5.23.0",
		"@wordpress/icons": "^10.23.0",
		"autosize": "^6.0.1",
		"clsx": "^2.1.1",
		"dompurify": "^3.2.6",
		"framer-motion": "^12.23.12",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-intersection-observer": "^9.4.3",
		"react-markdown": "^9.0.1",
		"react-redux": "^9.2.0",
		"smooch": "5.6.0",
		"wpcom-proxy-request": "^7.0.5"
	},
	"devDependencies": {
		"@automattic/calypso-typescript-config": "workspace:^",
		"@testing-library/jest-dom": "^6.6.3",
		"@types/autosize": "^4.0.3",
		"@types/jest": "^29.5.14",
		"@types/react": "^18.3.23",
		"@types/smooch": "^5.3.7",
		"jest": "^29.7.0",
		"typescript": "^5.8.3"
	}
}
